{
  "lexicon": 1,
  "id": "dev.mkizka.atp.profile.board",
  "defs": {
    "main": {
      "type": "record",
      "description": "Record containing a cards of your profile.",
      "key": "literal:board",
      "record": {
        "type": "object",
        "required": ["cards", "createdAt"],
        "properties": {
          "cards": {
            "type": "array",
            "description": "List of cards in the board.",
            "items": { "type": "ref", "ref": "#card" }
          },
          "createdAt": {
            "type": "string",
            "description": "Creation date of the board."
          }
        }
      }
    },
    "card": {
      "type": "object",
      "description": "Entity representing a card.",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of the card."
        },
        "link": {
          "type": "string",
          "description": "A link to other service."
        }
      }
    }
  }
}
