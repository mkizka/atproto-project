{
  "lexicon": 1,
  "id": "dev.mkizka.test.profile.board",
  "defs": {
    "main": {
      "type": "record",
      "description": "Record containing a cards of your profile.",
      "key": "literal:self",
      "record": {
        "type": "object",
        "required": ["cards", "createdAt"],
        "properties": {
          "cards": {
            "type": "array",
            "description": "List of cards in the board.",
            "items": {
              "type": "union",
              "refs": ["#linkCard", "#blueskyProfileCard"]
            }
          },
          "createdAt": {
            "type": "string",
            "description": "Creation date of the board."
          }
        }
      }
    },
    "linkCard": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID of the card"
        },
        "url": {
          "type": "string",
          "description": "URL of the link"
        }
      }
    },
    "blueskyProfileCard": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID of the card"
        },
        "handle": {
          "type": "string",
          "description": "Handle in bluesky"
        }
      }
    }
  }
}
